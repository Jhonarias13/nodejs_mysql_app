<div class="container p-4 h-100">
    <div class="row">

        {{#each links}}
        <div class="col-md-4 pb-4">
            <div class="card text-center">
                <div class="card-body ">
                    <a href="{{url}}" target="_blank" class="text-decoration-none">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p class="text-muted">{{timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary"><i class="far fa-edit"></i></a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto my-auto">
            <div class="card card-body text-center">
                <p>No hay links aún guardados ☹️ </p>
                <a href="/links/add" class="btn btn-primary ">Create a new <i class="fab fa-telegram-plane ml-2"></i></a>
            </div>
        </div>
        {{/each}}

    </div>
</div>